<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Title>Yatzy Points</Title>
    <PackageLicenseExpression>MIT-Modern-Variant</PackageLicenseExpression>
    <Version>2.0.0</Version>
    <PackageId>edvinpontuslarsson.yatzy.points</PackageId>
    <Authors>edvinpontuslarsson</Authors>
    <Description>Library for calculating yatzy points</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/edvinpontuslarsson/YatzyPoints</RepositoryUrl>
    <PackageTags>yatzy</PackageTags>
    <PackAsTool>False</PackAsTool>
    <Product>YatzyPoints</Product>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
